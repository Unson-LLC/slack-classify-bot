{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "outDir": "./dist/mastra",
    "rootDir": "./mastra",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false,
    "noImplicitAny": false
  },
  "include": ["mastra/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
